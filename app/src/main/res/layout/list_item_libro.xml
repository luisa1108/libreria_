<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/primario_claro"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imagen_libro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp">

        <TextView
            android:id="@+id/titulo_libro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo del libro"
            android:textColor="@color/secundario"/>

        <TextView
            android:id="@+id/autor_libro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor del libro"
            android:textColor="@color/secundario"/>
    </LinearLayout>
</LinearLayout>
